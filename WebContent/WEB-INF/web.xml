	<!-- FILTERS -->
		
	<filter>
		<filter-name>ConnectionFilter</filter-name>
		<filter-class>filters.ConnectionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ConnectionFilter</filter-name>
		<url-pattern>/restricted/*</url-pattern>
	</filter-mapping>
		
	<filter>
		<filter-name>SidebarFilter</filter-name>
		<filter-class>filters.SidebarFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SidebarFilter</filter-name>
		<url-pattern>/restricted/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>JSFilter</filter-name>
		<filter-class>filters.JSFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>JSFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
